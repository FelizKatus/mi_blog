<div class="row-fluid marketing">

  <% if @message && @message.length > 0 then %>
    <div class="alert" role="alert">
      <%= @message %>
    </div>
  <% end %>

  <h3>
    Contact
  </h3>
  <br>
  <form class="form-horizontal" action="/new" method="post">
    <div class="control-group">
      <label class="control-label" for="inputName">Name</label>
      <div class="controls">
        <input type="text" id="inputName" name="name" value="<%= @name %>" placeholder="Name" required>
      </div>
    </div>
    <div class="control-group">
      <label class="control-label" for="inputEmail">Email</label>
      <div class="controls">
        <input type="email" id="inputEmail" name="email" value="<%= @email %>" placeholder="Email" required>
      </div>
    </div>
    <div class="control-group">
      <label class="control-label" for="inputSubject">Subject</label>
      <div class="controls">
        <input type="text" id="inputSubject" name="subject" value="<%= @subject %>" placeholder="Subject" required>
      </div>
    </div>
    <div class="control-group">
      <label class="control-label" for="inputMessage">Message</label>
      <div class="controls">
        <textarea id="inputMessage" name="message" value="<%= @message %>" rows="3" placeholder="Message"></textarea>
      </div>
    </div>
    <div class="control-group">
      <div class="controls">
        <label class="checkbox">
          <input type="checkbox"> I'm not a robot
        </label>
        <button type="submit" class="btn">Send</button>
      </div>
    </div>
  </form>

</div><!--/marketing -->