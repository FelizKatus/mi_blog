<div class="blog-post">

  <h2 class="blog-post-title">
    <%= @post['title'] %>
  </h2>
  <p class="blog-post-meta">
    <%= @post['created_date'] %>
  </p>
  <p>
    <%= @post['content'] %>
  </p>

  <h3>
    Comments:
  </h3>

  <% @comments.each do |comment| %>
    <div class="blog-post">
      <p class="blog-post-meta">
        <%= comment['created_date'] %>
        by <a href="#"><%= comment['name'] %></a>
      </p>
      <p>
        <%= comment['comment'] %>
      </p>
    </div>
  <% end %>

  <hr>

  <% if @message && @message.length > 0 then %>
    <div class="alert alert-primary" role="alert">
      <%= @message %>
    </div>
  <% end %>

  <form action="/comments/<%= @post['id'] %>" method="post">
    <div class="form-group">
      <label for="inputTitle">Name</label>
      <input type="text" class="form-control" id="inputName" name="name" placeholder="Type your name" required>
    </div>
    <div class="form-group">
      <label for="textareaContent">Comment</label>
      <textarea class="form-control" id="textareaComment" name="comment" rows="3" placeholder="Type a comment text here" required></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Add Comment</button>
  </form>

</div>