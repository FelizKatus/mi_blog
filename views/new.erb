<main role="main" class="container">
  <div class="row">
    <div class="col-md-8 blog-main">

      <% if @message && @message.length > 0 then %>
        <div class="alert alert-primary" role="alert">
          <%= @message %>
        </div>
      <% end %>

      <h3 class="pb-4 mb-4 font-italic border-bottom">
        Add New Post
      </h3>

      <form action="/new" method="post">
        <div class="form-group">
          <label for="inputTitle">Post Title</label>
          <input type="text" class="form-control" id="inputTitle" name="title" placeholder="Type a title" required>
        </div>
        <div class="form-group">
          <label for="textareaContent">Post Content</label>
          <textarea class="form-control" id="textareaContent" name="content" rows="3" placeholder="Type a post text here" required></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>

    </div>
  </div>
</main><!-- /.container -->